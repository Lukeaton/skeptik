<div class="loginwrapper">

<div class="loginfield">
  <h1>Log In</h1>
</div>

<h2><%= flash[:error] %></h2>

<%= form_tag login_path do %>

<div class="loginfield">
  <%= label_tag :email %>
  <%= email_field_tag :email %>
</div>

<div class="loginfield">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>

<div class="loginfield">
  <%= submit_tag "Log in" %>
</div>

<% end %>
